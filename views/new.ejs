<div id="new"class="container">
    <div class="row">
        <h1 style="text-align: center">Create a Post</h1>
        <div style="width: 50%; margin: 25px auto;">
            <form action="/post" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name of the post">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="picture" placeholder="picture Link here">
                </div>
                <div class="form-group" >
                    <textarea class="form-control" rows="3" type="text" name="desc" placeholder="Description"></textarea>
                </div>
                <div class="form-group" >
                    <textarea class="form-control" rows="6" type="text" name="parafo" placeholder="paragraph"></textarea>
                </div>
              <center>  <div class="form-group" id="boton">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
              </div></center>
            </form>
            <a href="/post">Go Back</a>
        </div>
    </div>
</div>
